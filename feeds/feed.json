---
---
[
{% for post in site.posts %}
    {% if post.title != null and post.title != empty and post.search_omit != true %}
        {% if forloop.index > 1 %},{%endif%}{
            "title": "{{post.title }}",
            "content": "{{post.content | markdownify | strip_html | strip_newlines | remove: ':' | remove: '/' }}",
            "link": "{{ site.url }}{{ post.url }}",
            "date": "{{ post.date }}",
            "excerpt": "{{ post.excerpt | markdownify | strip_html | strip_newlines  }}"
        }
    {%endif%}
{% endfor %}

{% for page in site.pages %}
    {% if page.layout != 'none' and page.layout != 'none' and page.title != null and page.title != empty and page.title != 'Page Not Found' and page.search_omit != true %}
        {% if forloop.index > 1 %},{%endif%}{
            "title": "{{ page.title  }}",
            "content": "{{ page.content | markdownify | strip_html | strip_newlines | remove: ':' }}",
            "link": "{{ site.url }}{{ page.url }}",
            "date": "{{ page.date }}",
            "excerpt": "{{ page.excerpt | strip_html | strip_newlines }}"
        }
    {%endif%}
{% endfor %}
]